function(embed_string VAR_NAME TEXT_FILE IN_FILE OUT_FILE)
    set(SOURCE "\"")
    file(STRINGS "${TEXT_FILE}" LINES)
    foreach (LINE ${LINES})   
        string(REPLACE "\"" "\\\"" FORMATED_LINE ${LINE})
        set(SOURCE "${SOURCE}${FORMATED_LINE}\\n\"\n\"")
    endforeach()
    set(SOURCE "${SOURCE}\"")
    set(${VAR_NAME} "${SOURCE}")
    configure_file("${IN_FILE}"  "${OUT_FILE}")
endfunction()